<Window x:Class="AsyncServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="275.782" Width="430.833">
    <Window.Background>
        <ImageBrush ImageSource="clock.jpg"/>
    </Window.Background>
    <Grid>
        <Button x:Name="btnAvvia" Content="Avvia server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="136" Height="66" Click="btnAvvia_Click"/>
        <Button x:Name="BtnBroadcast" Content="Invia a tutti" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="136" Height="32" Click="BtnBroadcast_Click"/>
        <TextBox x:Name="txtBroadcast" HorizontalAlignment="Left" Height="66" Margin="10,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" RenderTransformOrigin="0.5,0.5" SpellCheck.IsEnabled="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
